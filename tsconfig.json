{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "dist",
    "removeComments": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ScriptHost", "ES2017", "ES2015"],
    "types":["wicg-mediasession"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
  },
  "exclude": ["node_modules", "tools", "dist"]
}
